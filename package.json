{
  "name": "griffo",
  "version": "1.0.0",
  "description": "Kerning-aware text splitting",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./motion": {
      "types": "./dist/motion.d.ts",
      "import": "./dist/motion.js"
    },
    "./morph": {
      "types": "./dist/morph.d.ts",
      "import": "./dist/morph.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "pretest:e2e": "pnpm run build",
    "test:e2e": "playwright test",
    "test:all": "vitest run --coverage && playwright test",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "size-limit": [
    {
      "name": "Core",
      "path": "dist/index.js",
      "import": "*"
    },
    {
      "name": "React",
      "path": "dist/react.js",
      "import": "*",
      "ignore": ["react"]
    },
    {
      "name": "Motion",
      "path": "dist/motion.js",
      "import": "*",
      "ignore": ["react", "motion", "motion/react"]
    },
    {
      "name": "Morph",
      "path": "dist/morph.js",
      "import": "*",
      "ignore": ["react", "motion", "motion/react"]
    },
    {
      "name": "Helpers",
      "path": "dist/helpers.js",
      "import": "*"
    }
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "motion": ">=11.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "motion": {
      "optional": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.0.0",
    "serve": "^14.2.4",
    "size-limit": "^12.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "text",
    "split",
    "split-text",
    "splittext",
    "text-animation",
    "text-effect",
    "animation",
    "motion",
    "kerning",
    "typography",
    "gsap",
    "javascript",
    "typescript",
    "react",
    "web-animation",
    "accessible"
  ],
  "license": "MIT",
  "author": "dimi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimicx/griffo.git"
  },
  "bugs": {
    "url": "https://github.com/dimicx/griffo/issues"
  },
  "homepage": "https://griffo.dimi.me",
  "publishConfig": {
    "access": "public"
  }
}
